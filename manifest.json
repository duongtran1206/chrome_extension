{
  "manifest_version": 3,
  "name": "BrookLyn",
  "version": "1.0",
  "permissions": ["tabs", "scripting", "storage", "downloads", "alarms"],
  "host_permissions": [
    "https://www.bestofbk.com/*",
    "https://*.secondstreetapp.com/*",
    "https://raw.githubusercontent.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.bestofbk.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
